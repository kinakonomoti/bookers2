<% if @book.errors %>
  <ul>
    <% @book.errors.full_messsage.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<h1>User info</h1>
<%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" ,format: 'no_image.jpg' %>
  <p>name</p>
  <%= @user.name %>
  <p>introduction</p>
  <%= link_to"",edit_user_path(@user.id) %>
<% end %>

<%= form_for(@book,  url: books_path) do |f| %>
<h1>New book</h1>
  <p>Title</p>
  <%= f.text_field :title %>
  <p>Opinion<p>
  <%= f.text_area :body %>
  <div>
  <%= f.submit 'Create Book' %>
  </div>
<% end %>

<h1>Books</h1>
<p>Title</p>
<p>Opinion</p>

<% books.each do |book| %>
<% link_to user_paht(book.user_id) do %>
<%= attachment_image_tag book.user, :profile_image, :fill, 20, 20, fallback: "no_image.jpg",size:'20x20',format: 'no_image.jpg' %>
<% end %>

<%=link_to book.title, book_path(book.id)%>
<%=link_to book.body %>
<% end %>