 <h1>User info</h1>
  <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" ,format: 'no_image.jpg' %>

  <p>name</p>
  <%= @user.name %>
  
  <p>introduction<p>
  <%= @user.introduction %>
  
  <%= link_to"",edit_user_path(current_user.id) %>
  
  
  <%= form_for(@book,  url: books_path) do |f| %>

    <h1>New book</h1>
    <p>Title</p>
     <%= f.text_field :title %>

    <h4>Opinion</h4>
    <%= f.text_field :body %>

    <div>
    <%= f.submit 'Create Book' %>
    </div>
  <% end %>

    <h1>Users</h1>

    <% @users.each do |user| %>
    <%= attachment_image_tag user, :profile_image, :fill, 20, 20, fallback: "no_image.jpg",size:'20x20',format: 'no_image.jpg' %>
    <%= user.name %>
   <%= link_to"Show",user_path(user.id) %>
   <% end %>