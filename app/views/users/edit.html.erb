 <% if @user.errors %>
        <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      <% end %>

<h1>User info</h1>
<%= form_for(@user, url: user_path(current_user.id)) do |f| %>
  <p>Name</p>
  <%= f.text_field :name %>
  <p>Image</p>
  <%= f.attachment_field :profile_image %>
  <p>introduction</p>
  <%= f.text_area :introduction %>

    <%= f.submit 'Update User' %>

<% end %>