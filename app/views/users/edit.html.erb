 <% if @user.errors %>
        <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      <% end %>

<h1>User info</h1>
<%= form_with model:@user do |f| %>
  <p>Name</p>
  <%= f.text_field :name %>
  <p>Image</p>
  <%= f.file_field :profile_image, : "Profile_image", accept: "image/*" %>
  <p>introduction</p>
  <%= f.text_area :introduction %>
  
  <div>
    <%= f.submit 'Update User' %>
  </div>
<% end %>